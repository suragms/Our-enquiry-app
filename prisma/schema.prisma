generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  role      UserRole @default(STAFF)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects     Project[]
  tasks        Task[]
  feedbacks    Feedback[]
}

model Project {
  id          String        @id @default(cuid())
  name        String
  overview    String
  techStack   String?
  status      ProjectStatus @default(IN_PROGRESS)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  createdBy   User @relation(fields: [createdById], references: [id])
  createdById String

  media       ProjectMedia[]
  feedbacks   Feedback[]
  tasks       Task[]
}

model ProjectMedia {
  id         String   @id @default(cuid())
  type       MediaType
  url        String
  projectId  String
  project    Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
}

model Feedback {
  id         String       @id @default(cuid())
  name       String
  company    String?
  content    String
  rating     Int
  isPublic   Boolean      @default(false)
  isApproved Boolean      @default(false)
  linkToken  String?      @unique
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  projectId  String
  project    Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  submittedBy User? @relation(fields: [submittedById], references: [id])
  submittedById String?
}

model Task {
  id          String     @id @default(cuid())
  title       String
  description String?
  status      TaskStatus @default(PENDING)
  deadline    DateTime?
  notes       String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  projectId   String
  project     Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  assignedTo  User? @relation(fields: [assignedToId], references: [id])
  assignedToId String?
}

model WebsiteContent {
  id        String   @id @default(cuid())
  page      String
  section   String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  STAFF
}

enum ProjectStatus {
  IN_PROGRESS
  DELIVERED
  COMPLETED
}

enum MediaType {
  IMAGE
  VIDEO
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}